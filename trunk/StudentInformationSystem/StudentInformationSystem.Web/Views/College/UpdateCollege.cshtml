        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CollegeName, htmlAttributes: new { @class = "control-label required"})
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CollegeName, new { required = "required" , type="text", maxlength = "100"})
            @Html.ValidationMessageFor(model => model.CollegeName)
        </div>

        <p>
            <input type="submit" value="Save" />
            @Html.ValidationMessage("UpdateCollegeFailedError")
        </p>
    </fieldset>
