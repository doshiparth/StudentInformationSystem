@model StudentInformationSystem.Entities.ViewModels.CollegeDetailsModel

@{
    ViewBag.Title = "Update College";
}

<h2>Update College</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Update College</legend>

        @*<div class="editor-label">
            @Html.LabelFor(model => model.CollegeID)
